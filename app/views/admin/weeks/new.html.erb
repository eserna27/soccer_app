<div class="container-fluid">
  </br>
  <div class="page-header">
    <h1>
      Crea una Jornada
      <small>
        good look!!
      </small>
    </h1>
  </div>
  <div class="row">
    <div class="col-sm-11 col-sm-offset-1">
      <h6>Jornadas</h6>
      <% @weeks.each do |week| %>
        <%= link_to week.week_number, admin_week_path(week.id) %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-5 col-sm-offset-1">
      <br>
      <%= form_for @week, url: admin_weeks_path do |f| %>
        <div class="form-group">
          <%= f.label :season_name, "Temporada:" %>
          <%= f.text_field :season_name, class: "form-control form-control-static" %>
        </div>
        <div class="form-group">
          <%= f.label :week_number, "Jornada:" %>
          <%= f.text_field :week_number, class: "form-control" %>
        </div>
        <%= f.hidden_field :season_id %>
        <br>
        <%= f.submit "Guardar", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
